<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme that extends MaterialComponents DayNight -->
    <style name="Theme.Pet_Scheduling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material Components compatible colors for dark theme -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        
        <!-- Surface colors for Material Components (dark) -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorOnSurfaceVariant">@color/dark_text_secondary</item>
        
        <!-- Background color (dark) -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>

