<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.hfad.pet_scheduling.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_petListFragment"
            app:destination="@id/petListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.hfad.pet_scheduling.ui.auth.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_petListFragment"
            app:destination="@id/petListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/petListFragment"
        android:name="com.hfad.pet_scheduling.ui.pets.PetListFragment"
        android:label="My Pets"
        tools:layout="@layout/fragment_pet_list">
        <action
            android:id="@+id/action_petListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/petListFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_petListFragment_to_addEditPetFragment"
            app:destination="@id/addEditPetFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditPetFragment"
        android:name="com.hfad.pet_scheduling.ui.pets.AddEditPetFragment"
        android:label="Add Pet">
        <argument
            android:name="petId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>

</navigation>

