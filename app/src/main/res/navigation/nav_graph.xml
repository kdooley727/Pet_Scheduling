<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment"
    app:enterAnim="@anim/slide_in_right"
    app:exitAnim="@anim/slide_out_left"
    app:popEnterAnim="@anim/slide_in_left"
    app:popExitAnim="@anim/slide_out_right">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.hfad.pet_scheduling.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_petListFragment"
            app:destination="@id/petListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.hfad.pet_scheduling.ui.auth.SignUpFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signUpFragment_to_petListFragment"
            app:destination="@id/petListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/petListFragment"
        android:name="com.hfad.pet_scheduling.ui.pets.PetListFragment"
        android:label="My Pets"
        tools:layout="@layout/fragment_pet_list">
        <action
            android:id="@+id/action_petListFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/petListFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_petListFragment_to_addEditPetFragment"
            app:destination="@id/addEditPetFragment" />
        <action
            android:id="@+id/action_petListFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
        <action
            android:id="@+id/action_petListFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_petListFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment" />
        <action
            android:id="@+id/action_petListFragment_to_sharePetFragment"
            app:destination="@id/sharePetFragment" />
        <action
            android:id="@+id/action_petListFragment_to_manageSharedAccessFragment"
            app:destination="@id/manageSharedAccessFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditPetFragment"
        android:name="com.hfad.pet_scheduling.ui.pets.AddEditPetFragment"
        android:label="Add Pet">
        <argument
            android:name="petId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
        <action
            android:id="@+id/action_addEditPetFragment_to_taskListFragment"
            app:destination="@id/taskListFragment" />
    </fragment>

    <fragment
        android:id="@+id/taskListFragment"
        android:name="com.hfad.pet_scheduling.ui.schedules.TaskListFragment"
        android:label="Schedule"
        tools:layout="@layout/fragment_task_list">
        <argument
            android:name="petId"
            app:argType="string" />
        <action
            android:id="@+id/action_taskListFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
        <action
            android:id="@+id/action_taskListFragment_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditTaskFragment"
        android:name="com.hfad.pet_scheduling.ui.schedules.AddEditTaskFragment"
        android:label="Add Task">
        <argument
            android:name="petId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
        <argument
            android:name="taskId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.hfad.pet_scheduling.ui.schedules.TaskDetailFragment"
        android:label="Task Details"
        tools:layout="@layout/fragment_task_detail">
        <argument
            android:name="taskId"
            app:argType="string" />
        <action
            android:id="@+id/action_taskDetailFragment_to_addEditTaskFragment"
            app:destination="@id/addEditTaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.hfad.pet_scheduling.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_manageSharedAccessFragment"
            app:destination="@id/manageSharedAccessFragment" />
    </fragment>

    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.hfad.pet_scheduling.ui.statistics.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />

    <fragment
        android:id="@+id/sharePetFragment"
        android:name="com.hfad.pet_scheduling.ui.sharing.SharePetFragment"
        android:label="Share Pet"
        tools:layout="@layout/fragment_share_pet" />

    <fragment
        android:id="@+id/manageSharedAccessFragment"
        android:name="com.hfad.pet_scheduling.ui.sharing.ManageSharedAccessFragment"
        android:label="Shared Access"
        tools:layout="@layout/fragment_manage_shared_access" />

</navigation>

