<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme that extends MaterialComponents (which extends AppCompat) for compatibility with AppCompatActivity -->
    <style name="Theme.Pet_Scheduling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material Components compatible colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        
        <!-- Surface colors for Material Components -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@android:color/darker_gray</item>
        
        <!-- Background color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        
        <!-- Status bar color (light theme) -->
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>